<% include ../partials/header %>

<div class="container">
	<div class=row>
	
	
		<h1 style="text-align: center">Create a new campground</h1>
		<div style="width: 30%; margin: 40px auto;">
			<form action="/campgrounds" method="post">
				<div class=form-group>
					<input class="form-control" type="text" name="name" placeholder="new campground">
				</div>
				<div class=form-group>
					<input class="form-control" type="text" name="image" placeholder="new image">
				</div>
				<div class=form-group>
					<input class="form-control" type="text" name="description" placeholder="new description">
				</div>
				<div class=form-group>
					<input class="btn btn-default btn-primary btn-block" type="submit" name="submit">
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
		
	</div>


<% include ../partials/footer %>
</div>