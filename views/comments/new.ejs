<% include ../partials/header %>

<div class="container">
	<div class=row>
	
	
		<h1 style="text-align: center">Add a new comment to <%= campground.name %></h1>
		<div style="width: 30%; margin: 40px auto;">
			<form action="/campgrounds/<%= campground._id %>/comments" method="post">
				<div class=form-group>
						<!--  name="comment[text]"  insert text into comment object, nakes retrieving in POST route easier -->
					<input class="form-control" type="text" name="comment[text]" placeholder="new comment">
				</div>
				<div class=form-group>
					<input class="form-control" type="text" name="comment[author]" placeholder="Author">
				</div>
				<div class=form-group>
					<input class="btn btn-default btn-primary btn-block" type="submit" name="submit">
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
		
	</div>


<% include ../partials/footer %>
</div>